{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Auto install extensions",
            "type": "shell",
            "command": "jq -r '.recommendations[]' .vscode/extensions.json | xargs -L 1 code --install-extension",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Build with C++ Properties",
            "type": "shell",
            "args": [
                "--mysql",
                "--postgres"
            ],
            "command": "${workspaceFolder}/.vscode/build_with_props.sh",
            "group": "build",
            "problemMatcher": []
        }
    ]
}